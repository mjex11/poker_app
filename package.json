{
  "name": "poker-app",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@rails/ujs": "^7.0.4-3",
    "esbuild": "^0.17.18",
    "turbolinks": "^5.2.0"
  },
  "version": "0.1.0",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "format": "prettier --write app/javascript/application.js",
    "lint": "eslint --fix app/javascript/application.js",
    "fix": "yarn run format && yarn run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  }
}
